#!/bin/bash

CDIR=$( dirname "$0" )
c2015=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2015/README.md | wc -m)
c2016=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2016/README.md | wc -m)
c2017=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2017/README.md | wc -m)
c2018=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2018/README.md | wc -m)
c2019=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2019/README.md | wc -m)
c2020=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2020/README.md | wc -m)
c2021=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2021/README.md | wc -m)
c2022=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2022/README.md | wc -m)
c2023=$(tr -d -c 'ðŸŒŸ' 2>/dev/null < $CDIR/../2023/README.md | wc -m)

echo 2015: $c2015 ðŸŒŸ
echo 2016: $c2016 ðŸŒŸ
echo 2017: $c2017 ðŸŒŸ
echo 2018: $c2018 ðŸŒŸ
echo 2019: $c2019 ðŸŒŸ
echo 2020: $c2020 ðŸŒŸ
echo 2021: $c2021 ðŸŒŸ
echo 2022: $c2022 ðŸŒŸ
echo 2023: $c2023 ðŸŒŸ

echo
P=$(echo "scale=4; ($c2015 + $c2016 + $c2017 + $c2018 + $c2019 + $c2020 + $c2021 + $c2022 + $c2023) / (9 * 50) * 100" | bc)
printf "Percentage completed: %.2f %%\n" $P

echo
echo See your calendars with \"aoc calendar -y YYYY\"
